<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd>
    <img src="<%= @photo.image %>">
  </dd>

  <dt>Caption</dt>
  <dd>
    <%= simple_format(@photo.caption) %>
  </dd>

  <dt>Owner</dt>
  <dd>
    <%= @photo.poster.username %>
  </dd>

  <dt>Posted</dt>
  <dd>
    2 months ago
  </dd>

  <dt>Fans</dt>
  <dd>
    <%= @photo.fan_list %>
  </dd>

  <dt>Add a fan</dt>
  <dd>
    <form action="/post_like" method="post">
      <label for="browser_pic_id">Photo ID</label>
      <input id="browser_pic_id" type="text" value="<%= @photo.id %>" name="qs_photo_id">

      <label for="browser_fan_id">Fan ID</label>
      <input id="browser_fan_id" type="text" name="qs_fan_id">

      <button>Add fan</button>
    </form>
  </dd>

  <dt>Edit photo</dt>
  <dd>
    <form action="/patch_photo/<%= @photo.id %>" method="post">
      <label for="browser_image">Image URL</label>
      <input id="browser_image" type="text" name="qs_image" placeholder="Enter a URL for the image..." value="<%= @photo.image %>">
    
      <label for="browser_caption">Caption</label>
      <textarea id="browser_caption" name="qs_caption" placeholder="Enter a caption for the photo..."><%= @photo.caption %></textarea>
    
      <button>Update photo</button>
    </form>
  </dd>

  <dt>Delete photo</dt>
  <dd>
    <a href="/delete_photo/<%= @photo.id %>">
      Delete this photo
    </a>
  </dd>
</dl>

<h2>Comments</h2>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <% @photo.comments.order(:created_at).each do |comment| %>
    <tr>
      <td>
        <%= comment.commenter.username %>
      </td>

      <td>
        <%= comment.body %>
      </td>

      <td>
        <%= time_ago_in_words(comment.created_at) %> ago
      </td>
    </tr>  
  <% end %>
</table>

<h3>Add a new comment</h3>

<form action="/post_comment" method="post">
  <label for="browser_photo_id">Photo ID</label>
  <input id="browser_photo_id" type="text" value="<%= @photo.id %>" name="qs_photo_id">
  
  <label for="browser_author_id">Author ID</label>
  <input id="browser_author_id" type="text" name="qs_author_id">

  <label for="browser_comment">Comment</label>
  <textarea id="browser_comment" name="qs_body" placeholder="Enter a comment..."></textarea>

  <button>Add comment</button>
</form>
